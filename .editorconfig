root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.{cpp,h,hpp,cc,cxx}]
indent_size = 4
max_line_length = 100

[*.{c,mm}]
indent_size = 4
max_line_length = 100

[*.cmake]
indent_size = 2

[CMakeLists.txt]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.ui]
indent_size = 2
